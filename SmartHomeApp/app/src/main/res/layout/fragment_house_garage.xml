<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cst2335.proj.HouseActivity$DummySectionFragment"
    android:gravity="fill_horizontal"
    >

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/garageImage"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:src="@drawable/ps_android_logo"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Garage Options"
      android:id="@+id/garageTitle"
      android:layout_below="@+id/garageImage"
      android:layout_centerHorizontal="true"
      android:gravity="center_horizontal"
      android:layout_marginTop="@dimen/activity_vertical_margin"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:text="Garage - allow the user to open / close the door, and turn on a light. Opening the garage door should also turn on the light automatically. The User should be able to turn on the light on and off afterwards."
      android:id="@+id/garageDescription"
      android:layout_below="@+id/garageTitle"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:gravity="center_horizontal"/>

  <Button
      android:text="SamrtHome Main"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/houseGarageMainButton"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true" />

</RelativeLayout>
