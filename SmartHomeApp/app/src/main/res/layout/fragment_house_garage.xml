<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cst2335.proj.HouseActivity$DummySectionFragment"
    android:gravity="fill_horizontal">

  <Button
      android:text="SamrtHome Main"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/houseGarageMainButton"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true" />

  <Switch
      android:text="Light"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/house_gargeswitch"
      android:layout_below="@+id/house_lightswitch"
      android:layout_alignStart="@+id/house_lightswitch"
      android:layout_marginTop="49dp" />

  <Switch
      android:text="Garage Door"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/house_lightswitch"
      android:layout_below="@+id/garageTitle"
      android:layout_alignParentStart="true"
      android:layout_marginStart="42dp"
      android:layout_marginTop="24dp" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Garage Options"
      android:id="@+id/garageTitle"
      android:gravity="center_horizontal"
      android:layout_marginTop="30dp"
      android:layout_alignParentTop="true"
      android:layout_toEndOf="@+id/house_gargeswitch" />

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/garageImage"
      android:src="@drawable/house_garage_open"
      android:layout_alignBottom="@+id/house_lightswitch"
      android:layout_alignEnd="@+id/garageTitle" />

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/house_lighton"
      android:id="@+id/imageView2"
      android:layout_alignBottom="@+id/house_gargeswitch"
      android:layout_alignStart="@+id/garageImage" />

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/house_garage_closed"
      android:layout_alignBottom="@+id/garageImage"
      android:layout_toEndOf="@+id/imageView2"
      android:layout_marginStart="18dp"
      android:id="@+id/imageView3" />

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/house_lightoff"
      android:layout_alignBottom="@+id/imageView2"
      android:layout_alignEnd="@+id/imageView3"
      android:id="@+id/imageView4" />

</RelativeLayout>
