<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cst2335.proj.HouseActivity$DummySectionFragment"
    android:gravity="fill_horizontal"
    >

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tempteratureImage"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:src="@drawable/ps_android_logo"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Temperature Options"
      android:id="@+id/temperatureTitle"
      android:layout_below="@+id/tempteratureImage"
      android:layout_centerHorizontal="true"
      android:gravity="center_horizontal"
      android:layout_marginTop="@dimen/activity_vertical_margin"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:text="House temperature - the user should be able to view and set the house temperature. The user should also be able to create a schedule by adding time / temperature settings that should appear in a list"
      android:id="@+id/garageDescription"
      android:layout_below="@+id/temperatureTitle"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:gravity="center_horizontal"/>

  <Button
      android:text="SamrtHome Main"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/houseTempMainButton"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true" />

</RelativeLayout>
