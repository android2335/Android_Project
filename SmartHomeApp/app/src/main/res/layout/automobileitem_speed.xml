<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Forward Speed "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/tv_forward" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_forward"
        android:layout_alignBottom="@id/tv_forward"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/et_forwardSpeed" />

    <TextView
        android:text="km/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/et_forwardSpeed"
        android:layout_alignBottom="@id/et_forwardSpeed"
        android:id="@+id/tv_forwardSpeed" />

    <TextView
        android:text="Backward Speed "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/tv_forward"
        android:layout_below="@id/tv_forward"
        android:layout_marginTop="25dp"
        android:id="@+id/tv_backward" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:layout_below="@id/et_forwardSpeed"
        android:layout_toRightOf="@id/tv_backward"
        android:id="@+id/et_backwardSpeed" />

    <TextView
        android:text="km/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/et_backwardSpeed"
        android:layout_alignBottom="@id/et_backwardSpeed"
        android:id="@+id/tv_backwardSpeed" />

    <Button
        android:text="Set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_backwardSpeed"
        android:layout_alignLeft="@id/et_forwardSpeed"
        android:id="@+id/btn_set" />
</RelativeLayout>

