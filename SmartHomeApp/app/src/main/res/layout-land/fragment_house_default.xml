<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context="com.cst2335.proj.HouseActivity"
    android:gravity="fill_horizontal">

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/garageImage"
      android:src="@drawable/house_logo"
      android:layout_above="@+id/houseDefaultMainButton"
      android:layout_alignParentStart="true"
      android:contentDescription="@string/house_default_image_description"/>

  <Button
      android:text="@string/house_back_to_main_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/houseDefaultMainButton"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true" />

</RelativeLayout>
